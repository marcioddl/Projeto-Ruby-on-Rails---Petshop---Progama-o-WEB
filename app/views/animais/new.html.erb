<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

<body style="background-color: #f8f9fa;">
  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-info text-white text-center">
        <h2>Criar Novo Animal</h2>
      </div>
      <div class="card-body">
        <% if @animal.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@animal.errors.count, "erro") %> proibiu este animal de ser salvo:</h2>
            <ul>
              <% @animal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @animal, url: animais_path, local: true, html: { multipart: true } do |f| %>
          <div class="form-group">
            <%= f.label :nome, class: 'form-label' %>
            <%= f.text_field :nome, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :especie, class: 'form-label' %>
            <%= f.text_field :especie, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :raca, class: 'form-label' %>
            <%= f.text_field :raca, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :idade, class: 'form-label' %>
            <%= f.number_field :idade, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :dono_id, "Selecione o Dono", class: 'form-label' %>
            <%= f.collection_select :dono_id, Dono.all, :id, :nome, { prompt: "Selecione um dono" }, class: 'form-control' %>
          </div>

          <!-- Campo Foto -->
          <div class="form-group">
            <%= f.label :foto, "Foto do Animal", class: 'form-label' %>
            <%= f.file_field :foto, class: 'form-control' %>
          </div>

          <div class="form-group text-center">
            <%= f.submit 'Salvar', class: 'btn btn-info btn-lg' %>
          </div>
        <% end %>
          <!-- BotÃ£o Voltar -->
          <div class="form-group text-center">
            <%= link_to 'Voltar', animais_path, class: 'btn btn-secondary btn-lg' %>
          </div>
        </div>
    </div>
  </div>
</body>
