<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<body style="background-color: #f8f9fa;">
    <div id="reset-password" class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg">
                        <div class="card-header bg-info text-white text-center">
                            <h3>Redefinir Senha</h3>
                        </div>
                        <div class="card-body">
                            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
                                <%= render "devise/shared/error_messages", resource: resource %>

                                <div class="form-group">
                                    <%= f.label :email, "Digite seu e-mail", class: 'text-info' %>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                                </div>

                                <div class="form-group">
                                    <label for="new_password" class="text-info">Digite sua nova senha</label>
                                    <%= f.password_field :password, id: "new_password", autocomplete: "new-password", class: "form-control" %>
                                </div>

                                <div class="form-group text-center">
                                    <%= f.submit "Redefinir Senha", class: "btn btn-info btn-block" %>
                                </div>
                            <% end %>
                        </div>
                        <div class="card-footer text-center">
                            <%= link_to "Voltar ao Login", new_session_path(resource_name), class: 'text-info' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
